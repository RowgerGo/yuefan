<!--pages/select_friends/select_friends.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">选择好友</view>
    <view class="page__desc">邀请好友参与</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{grids}}" wx:key="*this">
        <navigator url="" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon"  src="../../images/icon_tabbar.png"/>
          <view class="weui-grid__label">User</view>
        </navigator>
      </block>
    </view>
  </view>
</view>
<view class="page__bd">
  <view class="weui-btn-area">
    <button class="weui-btn btn_theme_red" type="default" bindtap="false">取消</button>
    <button class="weui-btn btn_theme_red" type="default" bindtap="true">确定</button>
  </view>
</view>