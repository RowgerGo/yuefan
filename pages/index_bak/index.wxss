/**index.wxss**/

.header {
  display: flex;
  padding: 0 20px;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.page__hd {
  padding: 40px;
}

.input_date_time {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weui-grids_margin {
  margin-top: 10px !important;
}

.select_icon {
  position: absolute;
  top: 5px;
  right: 5px;
}

.back_test {
  background: #db6283 !important;
}

.weui-cells__title {
  display: flex;
  padding-top: 25px;
}

.btn_theme_red {
  color: white !important;
  width: 90%;
  border: 1px solid #db6283 !important;
  margin-top: 30rpx;
  background-color: #db6283 !important;
  margin-bottom: 40rpx;
}

.btn_theme_black {
  border: 1px solid #d9d9d9 !important;
  width: 90%;
  margin-top: 30rpx;
  background-color: #fff !important;
}
.weui-label{
  display: flex;
  padding-top: 30px;
}
